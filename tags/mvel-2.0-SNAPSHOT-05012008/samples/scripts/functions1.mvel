function isGood(obj) {
        return !(obj.toLowerCase() contains "evil");
}

function describe(obj) {
        System.out.println(obj + " is " + (isGood(obj) ? "Good" : "Evil"));
}

$test1 = "Mr. Good";
$test2 = "Mr. Evil";

describe($test1);
describe($test2);